{
  "$id": "https://json-schema.org/draft/2020-12/schema",
  "title": "Registers",
  "description": "A register description.",
  "type": "object",
  "required": [
    "schema",
    "root",
    "elements"
  ],
  "additionalProperties": false,
  "properties": {
    "schema": {
      "description": "Contains schema version information",
      "type": "object",
      "required": [
        "version",
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "version": {
          "description": "The register.schema.json version the document targets",
          "type": "string",
          "pattern": "^v0.2(.[0-9]\\d*)*$"
        },
        "name": {
          "description": "The name of the format that register.schema.json supports",
          "type": "string",
          "pattern": "register-description-format"
        }
      }
    },
    "root": {
      "description": "Contains design information",
      "type": "object",
      "required": [
        "desc",
        "children"
      ],
      "additionalProperties": false,
      "properties": {
        "desc": {
          "description": "The name of the design meant to be displayed",
          "type": "string"
        },
        "version": {
          "description": "The design version",
          "type": "string"
        },
        "doc": {
          "description": "Documentation text describing the root element",
          "type": "string"
        },
        "links": {
          "description": "Relevant links (text/URL pairs) for the design.",
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            ".*": {
              "description": "A URI",
              "type": "string"
            }
          }
        },
        "data_width": {
          "description": "Size of registers in number of bits",
          "type": "number",
          "enum": [
            16,
            32
          ],
          "default": 32
        },
        "default_reset": {
          "description": "The name used for a reset when field.reset is specified as a scalar",
          "type": "string",
          "default": "Default"
        },
        "expanded": {
          "description": "An array of element IDs to expand in the home view",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "children": {
          "description": "An array of top level element IDs",
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      }
    },
    "elements": {
      "description": "Design elements",
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        ".*": {
          "description": "A design element",
          "type": "object",
          "required": [
            "id",
            "name",
            "type"
          ],
          "additionalProperties": false,
          "properties": {
            "id": {
              "description": "A unique element ID",
              "type": "string"
            },
            "name": {
              "description": "The name of the element",
              "type": "string"
            },
            "desc": {
              "description": "A human readable or formatted name of the element",
              "type": "string"
            },
            "type": {
              "description": "The element type",
              "enum": [
                "blk",
                "reg",
                "mem",
                "include"
              ]
            },
            "offset": {
              "description": "The offset of the element relative to its parent",
              "type": [
                "string",
                "number"
              ],
              "pattern": "^(0x)?[0-9a-fA-F]+$"
            },
            "doc": {
              "description": "Element documentation",
              "type": "string"
            },
            "fields": {
              "description": "An array of child element IDs",
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "nbits",
                  "lsb",
                  "name",
                  "access"
                ],
                "additionalProperties": false,
                "properties": {
                  "nbits": {
                    "description": "Number of bits",
                    "type": "integer",
                    "minimum": 1
                  },
                  "lsb": {
                    "description": "Position of the least significant bit",
                    "type": "integer",
                    "minimum": 0
                  },
                  "name": {
                    "description": "The name of the register field",
                    "type": "string"
                  },
                  "access": {
                    "description": "The software access type of the field",
                    "type": "string"
                  },
                  "reset": {
                    "description": "The reset value of the field",
                    "type": [
                      "string",
                      "number",
                      "object"
                    ],
                    "pattern": "^(0x|0b)?[0-9a-fA-F|?]+$",
                    "additionalProperties": false,
                    "properties": {
                      "value": {
                        "description": "the value of the reset",
                        "type": [
                          "string",
                          "number"
                        ],
                        "pattern": "^(0x|0b)?[0-9a-fA-F|?]+$"
                      },
                      "names": {
                        "description": "named reset states to associate with the given reset value",
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "doc": {
                    "description": "Field documentation",
                    "type": "string"
                  },
                  "enum": {
                    "description": "Enumerated field values associated with a label",
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "name",
                        "value"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "name": {
                          "description": "The name of the enumerated field value",
                          "type": "string"
                        },
                        "value": {
                          "description": "The field value to associate with the name",
                          "type": [
                            "string",
                            "number"
                          ]
                        },
                        "doc": {
                          "description": "The description of the enumerated field value",
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            },
            "version": {
              "description": "The design version",
              "type": "string"
            },
            "links": {
              "description": "Relevant links (text/URL pairs) for the design.",
              "type": "object",
              "patternProperties": {
                ".*": {
                  "description": "A URI",
                  "type": "string"
                }
              }
            },
            "data_width": {
              "description": "Size of registers in number of bits",
              "type": "number",
              "enum": [
                16,
                32
              ],
              "default": 32
            },
            "default_reset": {
              "description": "The name used for a reset when field.reset is specified as a scalar",
              "type": "string"
            },
            "size": {
              "description": "The size (in bytes) of the element",
              "type": [
                "string",
                "number"
              ]
            },
            "children": {
              "description": "An array of child element IDs",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "url": {
              "description": "URL to fetch data from in nested inclusion block",
              "type": "string"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "reg"
                  }
                }
              },
              "then": {
                "required": [
                  "fields",
                  "offset"
                ],
                "properties": {
                  "version": false,
                  "links": false,
                  "data_width": false,
                  "default_reset": false,
                  "size": false,
                  "children": false,
                  "url": false
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "include"
                  }
                }
              },
              "then": {
                "required": [
                  "url"
                ],
                "properties": {
                  "version": false,
                  "links": false,
                  "data_width": false,
                  "default_reset": false,
                  "size": false,
                  "children": false,
                  "fields": false
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "mem"
                  }
                }
              },
              "then": {
                "required": [
                  "size"
                ],
                "properties": {
                  "version": false,
                  "links": false,
                  "data_width": false,
                  "default_reset": false,
                  "children": false,
                  "fields": false
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "blk"
                  }
                }
              },
              "then": {
                "required": [
                  "children"
                ],
                "properties": {
                  "fields": false,
                  "url": false
                }
              }
            }
          ]
        }
      }
    }
  }
}